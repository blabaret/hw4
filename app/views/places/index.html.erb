  <% if @current_user %>
    <div class="row">
      <div class="col-md-12">
        <h1>Places</h1>
      </div>
      <div class="col-md-12">
        <a href="/places/new/" class="my-3 btn btn-success">New Place</a>
      </div>
    </div>
  <% else
    flash["notice"] = "Please login."
  end %>


<ul class="list-unstyled">
  <% for place in @places %>
    <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
  <% end %>
</ul>